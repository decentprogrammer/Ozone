@page
@model Ozone.UI.Areas.Trainings.Pages.Courses.CreateModel



<div class="row form-group" style="margin-top:50px">
    <div class="col-md-8 offset-md-2">
        <h3 class="page-header">
            <i class="fa fa-plus"></i>
            Add Course
            <hr />
        </h3>
    </div>
    
</div>

<div class="row formgroup">
    <div class="col-md-6 offset-md-3">
        <form id="addcourse" method="post">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(false, "", new { @class = "text-warning" })
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.CourseName"></label>
                <input asp-for="Input.CourseName" class="form-control" />
                <span asp-validation-for="Input.CourseName" class="text-danger"></span>
            </div>
            <button type="submit" id="Submit" class="btn btn-success pull-right">
                Save
            </button>
        </form>        
    </div>
    
</div>
